<resources xmlns:tools="http://schemas.android.com/tools">
    <!-- Base application theme. -->
    <style name="Theme.Light" parent="Theme.MaterialComponents.DayNight.NoActionBar">
        <!-- Primary brand color. -->
        <item name="colorPrimary">@color/purple_500</item>
        <item name="colorPrimaryVariant">@color/purple_700</item>
        <item name="colorOnPrimary">@color/white</item>
        <!-- Secondary brand color. -->
        <item name="colorSecondary">@color/teal_200</item>
        <item name="colorSecondaryVariant">@color/teal_700</item>
        <item name="colorOnSecondary">@color/black</item>
        <!-- Status bar color. -->
        <item name="android:statusBarColor" tools:targetApi="l">?attr/colorPrimaryVariant</item>
        <item name="background_color">#FFFFFF</item>
        <item name="text_color">#000000</item>
        <!-- Customize your theme here. -->
    </style>
    <style name="roundimageview">
        <item name="cornerFamily">rounded</item>
        <item name="color">#FFFFFF</item>
        <item name="cornerSize">160dp</item>
    </style>
    <style name="rb">
        <item name="cornerFamily">rounded</item>
        <item name="color">#4169E1</item>
        <item name="cornerSize">40dp</item>
    </style>
    <style name="a0">
        <item name="cornerFamily">rounded</item>
        <item name="color">#1FABF1</item>
        <item name="cornerSize">40dp</item>
    </style>

</resources>